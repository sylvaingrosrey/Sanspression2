{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    
        <div class="container ml-5 mr-5">
<div class="row ">

<div class="col-12">
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>SrcImgArticle</th>
                <td>{{ article.srcImgArticle }}</td>
            </tr>
            <tr>
                <th>DescriptionArticle</th>
                <td>{{ article.descriptionArticle }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ article.price }}</td>
            </tr>
            <tr>
                <th>MenuActive</th>
                <td>{{ article.menuActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>NewActive</th>
                <td>{{ article.newActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PromoActive</th>
                <td>{{ article.promoActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ArticleActive</th>
                <td>{{ article.articleActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
   
    <a href="{{ path('article_index') }}" class="btn btn-outline-primary mb-2 ml-3">back to list</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-outline-secondary mb-2 ml-5">edit</a>

    {{ include('article/_delete_form.html.twig') }} </div></div></div>
{% endblock %}
