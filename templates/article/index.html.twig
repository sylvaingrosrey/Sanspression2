{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
  <div class="row ml-4 mr-4">
            <h1>Article index</h1>

            <table class="table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>SrcImgArticle</th>
                    <th>DescriptionArticle</th>
                    <th>Price</th>
                    <th>MenuActive</th>
                    <th>NewActive</th>
                    <th>PromoActive</th>
                    <th>ArticleActive</th>
                    <th>Date</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.name }}</td>
                        <td>{{ article.srcImgArticle }}</td>
                        <td>{{ article.descriptionArticle }}</td>
                        <td>{{ article.price }}</td>
                        <td>{{ article.menuActive ? 'Yes' : 'No' }}</td>
                        <td>{{ article.newActive ? 'Yes' : 'No' }}</td>
                        <td>{{ article.promoActive ? 'Yes' : 'No' }}</td>
                        <td>{{ article.articleActive ? 'Yes' : 'No' }}</td>
                        <td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-outline-secondary">show</a>
                            <a class="btn btn-outline-secondary ml-1" href="{{ path('article_edit', {'id': article.id}) }}" >edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row">

 <a href="{{ path('admin') }}" class="btn btn-outline-primary mr-3 mb-2"> <= back to menu admin</a>
            <a class="btn btn-outline-success mb-2" href="{{ path('article_new') }}">Create new</a>
        </div>
    </div>
{% endblock %}