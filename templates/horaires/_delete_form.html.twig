<form method="post" action="{{ path('horaires_delete', {'id': horaires.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ horaires.id) }}">
    <button class="btn btn-outline-danger ">Delete</button>
</form>
