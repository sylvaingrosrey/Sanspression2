{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
 <div class="container ml-3">
        <div class="row ml-4 mr-4">
    <h1>User index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Name</th>
            <th>PhoneNumber</th>
            <th>Adresse</th>
            <th>Cp</th>
           
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.phoneNumber }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.cp }}</td>
             <td>{{ user.password }}</td>
           
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-outline-secondary">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-outline-secondary ml-2">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

 <a href="{{ path('home') }}" class="btn btn-outline-primary mr-3 mb-3"> <= back to home</a>
    <a href="{{ path('user_new') }}" class="btn btn-outline-success ml-5 mb-3">Create new</a>
    
    </div>
     </div>
   
   
{% endblock %}