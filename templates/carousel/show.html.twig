{% extends 'base.html.twig' %}

{% block title %}Carousel{% endblock %}

{% block body %}
<div class="container ml-5 mr-5">
<div class="row ">

<div class="col-12">
    <h1>Carousel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carousel.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ carousel.name }}</td>
            </tr>
            <tr>
                <th>SrcImg</th>
                <td>{{ carousel.srcImg }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ carousel.Active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ carousel.Description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('carousel_index') }}" class="btn btn-outline-primary">back to list</a>

    <a href="{{ path('carousel_edit', {'id': carousel.id}) }}" class="btn btn-outline-secondary ml-5">edit</a>

    {{ include('carousel/_delete_form.html.twig') }}
     </div>
    </div> 
    </div>
{% endblock %}
