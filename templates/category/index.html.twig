{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
 <div class="row ml-4 mr-4">
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>SrcImg</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.srcImg }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-outline-secondary">show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-outline-secondary ml-1">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

 <a href="{{ path('admin') }}" class="btn btn-outline-primary mr-3 mb-3"> <= back to menu admin</a>
    <a href="{{ path('category_new') }}" class="btn btn-outline-success ml-3 mb-3">Create new</a>
    </div>
{% endblock %}
