{% extends 'base.html.twig' %}

{% block title %}{{ sitename }}{% endblock %}

{% block body %}
    {# carousel #}
    {% block carousel %}

        <div class="bd-example">
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    {% for carouselactive in carouselactive %}
                        <div class="carousel-item active" data-interval="3000">
                            <img src="{{ carouselactive.srcimg }}" class="d-block w-100 h-65" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <div class="row">
                                    <div class="col-md-6">
                                        {%  if app.request.locale == "en"%}
                                            <h4 style="margin-bottom:2%;color:palegreen;">{{carouselactive.descriptionen}}</h4>
                                        {%  elseif app.request.locale == "es"%}
                                            <h4 style="margin-bottom:2%;color:palegreen;">{{carouselactive.descriptiones}}</h4>
                                        {%  elseif app.request.locale == "de"%}
                                            <h4 style="margin-bottom:2%;color:palegreen;">{{carouselactive.descriptionde}}</h4>
                                        {%  elseif app.request.locale == "tr"%}
                                            <h4 style="margin-bottom:2%;color:palegreen;">{{carouselactive.descriptiontr}}</h4>
                                        {%  else %}
                                            <h4 style="margin-bottom:2%;color:palegreen;">{{carouselactive.description}}</h4>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    {% for carousel in carousel %}
                        <div class="carousel-item" >
                            <img src="{{ carousel.srcimg }}" class="d-block w-100" alt="{{ carousel.srcimg }}">
                            <div class="carousel-caption d-none d-md-block">
                                {%  if app.request.locale == "en"%}
                                    <h4 style="margin-bottom:2%;color:palegreen;">{{carousel.descriptionen}}</h4>
                                {%  elseif app.request.locale == "es"%}
                                    <h4 style="margin-bottom:2%;color:palegreen;">{{carousel.descriptiones}}</h4>
                                {%  elseif app.request.locale == "de"%}
                                    <h4 style="margin-bottom:2%;color:palegreen;">{{carousel.descriptionde}}</h4>
                                {%  elseif app.request.locale == "tr"%}
                                    <h4 style="margin-bottom:2%;color:palegreen;">{{carousel.descriptiontr}}</h4>
                                {%  else %}
                                    <h4 style="margin-bottom:2%;color:palegreen;">
                                        <a href="{{carousel.description}}">{{carousel.description}}</a></h4>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

    {% endblock %}
    {# end block carousel #}

    {# block news #}
    {% block news %}
        <div class="container">
            <div class="row">
                {% for news in news %}

                    <div class="col-lg-3 col-md-4 col-sm-6 my-5">
                        <div class="card" style="width: 16rem;">
                            <img src="{{ news.srcimgarticle }}" class="card-img-top" alt="...">
                            <div class="card-body text-center">
                                {%  if app.request.locale == "en"%}
                                    <h5 class="card-title">{{ news.nameen }}</h5>
                                    <p class="card-text">{{ news.descriptionen }}</p>
                                {%  elseif app.request.locale == "es"%}
                                    <h5 class="card-title">{{ news.namees }}</h5>
                                    <p class="card-text">{{ news.descriptiones }}</p>
                                {%  elseif app.request.locale == "de"%}
                                    <h5 class="card-title">{{ news.namede }}</h5>
                                    <p class="card-text">{{ news.descriptionde }}</p>
                                {%  elseif app.request.locale == "tr"%}
                                    <h5 class="card-title">{{ news.nametr }}</h5>
                                    <p class="card-text">{{ news.descriptiontr }}</p>
                                {%  else %}
                                    <h5 class="card-title">{{ news.name }}</h5>
                                    <p class="card-text">{{ news.descriptionarticle }}</p>
                                {% endif %}
                                <div class="row">
                                    <div class="col-md-6">
                                        <p>{{ news.price }} Euros</p>
                                    </div>
                                    <div class="col-md-6">
                                        {% if (is_granted ('ROLE_ADMIN') == false) and (is_granted ('ROLE_USER') == true) %}
                                            <a href="/panier/add/{{ news.id }}" class="btn btn-warning">Ajouter</a>
                                        {% else %}
                                            <a href="{{ path('app_login') }}" class="btn btn-warning">Ajouter</a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endblock %}
    {# end block news #}

