<!DOCTYPE html>
<html lang="{{ app.request.locale }}">

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {{ encore_entry_link_tags('app') }}
    {% block stylesheets %}
    {% endblock %}
</head>

<body>
<header>

    <nav class="navbar navbar-dark navbar-expand-lg ">

        <a class="navbar-brand " href="{{ path('home') }}"><img class="logo" src="../Images/Logo-big.png"></a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarResponsive" >
            <ul class="navbar-nav ">
                <li class="nav-item mt-2">
                    <a class="nav-link " href="{{ path('home') }}">{{ "HOME_NAV"| trans | raw }}</a>
                </li>
                <li class="nav-item mt-2">
                    <a class="nav-link " href="{{ path('catalogue') }}">{{ "CARTE_NAV"| trans | raw }}</a>
                </li>
                {% if (is_granted ('ROLE_ADMIN') == false) and (is_granted ('ROLE_USER') == true) %}
                    <li class="nav-item mt-2">
                        <a class="nav-link " href="{{ path('user_show', {'id': app.user.id}) }}">
                            {{ "MY_ACCOUNT_NAV"| trans | raw }}</a>
                    </li>
                {% endif %}
                {% if app.user.roles is defined %}



                    {% for role in app.user.roles if role == 'ROLE_ADMIN' %}
                        <li class="nav-item mt-2">
                            <a class="nav-link " href="{{ path("admin") }}">Admin</a>
                        </li>
                    {% endfor %}
                {% endif %}
                {% if app.user.roles is  defined %}
                    <li class="nav-item mt-2">
                        <a class="nav-link " href="{{ path("app_logout") }}">{{ "LOGOUT_NAV"| trans | raw }}</a>
                    </li>


                {% else  %}
                    <li class="nav-item mt-2">
                        <a class="nav-link " href="{{ path('app_login') }}">{{ "LOGIN_NAV"| trans | raw }}</a>
                    </li>
                {% endif  %}

                {% if app.user.roles is  defined %}
                <li class="nav-item mt-2">
                    <a class="nav-link " href="/panier">{{ "CART_NAV"| trans | raw }}</a>
                </li>
                {% endif %}
                <li class="nav-item mt-2">
                    <button type="button" class="btn btn-danger commander mr-2">{{'BUTTON_NAV'| trans | raw}}</button>
                </li>
                <li class="nav-item mt-2">
                    {% if app.user.roles is defined %}
                        {% if is_granted ('ROLE_ADMIN') == false %}
                            <i class="fa fa-user mt-3 ml-5" style="color:orange;"> {{ app.user.name }}</i>
                        {% else %}
                            <i class="fa fa-user mt-3 ml-5" style="color:lightgreen;"> {{ app.user.name }}</i>
                        {% endif %}

                    {% endif %}
                </li>
            </ul>
        </div>
    </nav>




</header>
{% block body %}{% endblock %}
{% block footer %}
    <div id="footer">
        <div class="container text-center ">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h3>{{"LOCATION_FOOTER"| trans | raw }}</h3>

                    <p>2 Rue de Selestat,</p>
                    <p>Schiltigheim 67300</p>

                </div>
                <div class="col-md-4">
                    <h3>{{"OPEN_TIME_FOOTER"| trans | raw }}</h3>

                    <p> {% for horaires in horaires %}

                            {%  if app.request.locale == "en"%}
                                {{ horaires.joursen}} : {{ horaires.ouverture}} : {{ horaires.fermeture}} <br>
                            {%  elseif app.request.locale == "es"%}
                                {{ horaires.jourses}} : {{ horaires.ouverture}} : {{ horaires.fermeture}} <br>
                            {%  elseif app.request.locale == "de"%}
                                {{ horaires.joursde}} : {{ horaires.ouverture}} : {{ horaires.fermeture}} <br>
                            {%  elseif app.request.locale == "tr"%}
                                {{ horaires.jourstr}} : {{ horaires.ouverture}} : {{ horaires.fermeture}} <br>
                            {%  else %}
                                {{ horaires.jours}} : {{ horaires.ouverture}} : {{ horaires.fermeture}} <br>
                            {% endif %}

                        {% endfor %}
                    </p>

                </div>
                <div class="col-md-4 mb-4">
                    <h3>{{"CONTACT_US_FOOTER"| trans | raw }}</h3>

                    <p>Tel: +1 123 456 1234</p>
                    <p>Email: info@company.com</p>

                </div>
            </div>
        </div>
        <div class="row ">
            <div class="col-md-1"></div>
            <div class="col-sm-8 col-md-5 ml-5">
                <h3 class=" mb-5">{{"MAP_FOOTER"| trans | raw }}</h3>
                <iframe width="400" height="300"
                        src="https://maps.google.com/maps?width=700&amp;height=440&amp;hl=en&amp;q=2%20route%20de%20selestat%2067300Shiltigheim+(Titre)&amp;ie=UTF8&amp;t=&amp;z=13&amp;iwloc=B&amp;output=embed"
                        frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
            </div>
            <div class="col-sm-8 col-lg-5">
                <div class="container text-white">
                    <h3>{{ "CONTACT_FOOTER"| trans | raw }}</h3>
                    <form action="mailto:adresseresto@gg.com" method="post">

                        <div class="form-group">
                            <label for="exampleFormControlInput1" style="color:#D3D3D3" id="formfooter">{{ "CONTACT_FOOTER"| trans | raw }}</label>
                            <input type="email" class="form-control" id="formfooter" placeholder="name@example.com">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1"
                                   style="color:#D3D3D3" id="formfooter">{{ "QUESTION_FOOTER"| trans | raw }} </label>
                            <input type="text" class="form-control" id="formfooter" placeholder="sujet">
                        </div>


                        <div class="form-group">
                            <label for="exampleFormControlTextarea1" style="color:#D3D3D3" id="formfooter">{{ "TOPIC_FOOTER"| trans | raw }}</label>
                            <textarea class="form-control formfooter" id="formfooter" rows="3"></textarea>
                        </div>
                        <button type="submit" name="submit" class="btn btn-info" id="formfooterbutton">{{ "SUBMIT_FOOTER"| trans | raw }}</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="container-fluid text-center copyrights">
            <div class="col-md-12">
                <div class="social">
                    <ul>
                        <li><a href="#"><i class="fab fa-facebook-f" ></i></a></li>
                        <li><a href="#"><i class="fab fa-twitter" ></i></a></li>
                        <li><a href="#"><i class="fab fa-instagram" ></i></a></li>
                        <li><a href="#"><i  class="fab fa-snapchat" ></i></a></li>
                    </ul>
                </div>
                <p>&copy; 2019 @copyrights. All rights reserved. Designed by <a href="#" rel="nofollow">link cgu rgpd</a></p>
            </div>
        </div>
    </div>


{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>

</html>